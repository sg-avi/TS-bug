{
    "compilerOptions": {
        "baseUrl": "",
        "module": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "junk_js_files",
        "paths": {
            "services": ["app/scripts/services/*"],
            "inputDirectives": ["app/scripts/inputDirectivesModule/*"],
            "common": ["app/scripts/common/*"]
        }
    },
    "include": [
        "app/**/*.ts",
        "DefinitelyTyped/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}
